<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/game_lost"
    android:orientation="vertical"
    tools:context="com.barrelracing.GameLostPage"
    tools:ignore="MergeRootFrame,RtlHardcoded" >

    <TableRow
        android:id="@+id/tableRowDummy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="375dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp" >
    </TableRow>

    <TableRow
        android:id="@+id/tableRowMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/halo_dark"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp" >

        <TextView
            android:id="@+id/textViewMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white"
            android:textStyle="italic|bold" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRowButtonBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/halo_dark"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp" >

        <Button
            android:id="@+id/buttonBack"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:background="@drawable/green_round_button"
            android:drawableLeft="@drawable/back"
            android:drawablePadding="2dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:text="@string/back"
            android:textStyle="italic" >
        </Button>
    </TableRow>

</LinearLayout>